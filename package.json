{
  "name": "olsonjosh.github.io",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run build:css && next dev",
    "build": "npm run build:css && next build && next export",
    "start": "npm run build:css && next start",
    "update": "npx npm-check-updates -u && npm install",
    "build:css": "postcss src/styles/tailwind.pcss -o src/styles/index.scss"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^3.1.3",
    "@tailwindcss/typography": "latest",
    "autoprefixer": "latest",
    "gray-matter": "^4.0.2",
    "next": "latest",
    "postcss": "latest",
    "postcss-cli": "latest",
    "postcss-import": "^14.0.0",
    "postcss-preset-env": "^6.7.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "remark": "^13.0.0",
    "remark-html": "^13.0.1",
    "remark-prism": "^1.3.3",
    "tailwindcss": "latest"
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none"
  }
}
