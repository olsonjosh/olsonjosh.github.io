{
  "name": "nextjs-tailwindcss-typescript-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run build:css && next dev",
    "build": "npm run build:css && next build && next export",
    "start": "npm run build:css && next start",
    "build:css": "postcss src/styles/tailwind.scss -o src/styles/index.scss",
    "watch": "watch 'npm run build:css' ./src/styles"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "next": "^10.0.2",
    "next-compose-plugins": "^2.2.1",
    "next-optimized-images": "^2.6.2",
    "node-sass": "^5.0.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "watch": "^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^14.14.9",
    "@types/react": "^17.0.0",
    "autoprefixer": "^10.0.2",
    "clean-css": "^4.2.3",
    "postcss-cli": "^8.3.0",
    "postcss-import": "^13.0.0",
    "postcss-preset-env": "^6.7.0",
    "tailwindcss": "^2.0.1",
    "typescript": "^4.1.2"
  }
}
